# Dockerfile for Token Visualizer Backend
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies and uv
RUN apt-get update && apt-get install -y \
    curl \
    unzip \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Add uv to PATH
ENV PATH="/root/.local/bin:$PATH"

# Copy project files
COPY pyproject.toml uv.lock* ./

# Install Python dependencies using uv
RUN uv sync --no-dev

# Copy application code
COPY . .

# Initialize Reflex (needed for backend)
RUN uv run reflex init

# Set default environment variables
ENV LLM_SERVICE_URL=http://localhost:8001
ENV LOCAL_MODEL_NAME=google/gemma-2-2b
ENV HUGGINGFACE_TOKEN=
ENV DEVICE=auto
ENV USE_QUANTIZATION=true
ENV DEBUG=false

# Expose port
EXPOSE 8000

# Run only the backend
CMD ["uv", "run", "reflex", "run", "--env", "prod", "--backend-only", "--host", "0.0.0.0", "--port", "8000"]
